<%- include('../partials/header') %>

<h3>Flights</h3>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>flightNo</th>
      <th>Departs</th>
      <th>Destination</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(f) { %>
      <tr>
        <td><%= f.airline %></td>
        <td><%= f.airport %></td>
        <td><%= f.flightNo %></td>
        <td><%= f.departs %></td>
        <td><%= f.destination.airport %></td>
        <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
      </tr>
    <% }); %>
  </tbody>
</table>


<%- include('../partials/footer') %>